<% provide(:title, "Iniciar sesion") %>

<h1>Iniciar sesion</h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4 card">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email, "Correo electronico" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, "Contraseña" %>
      <%= link_to "(Olvide contraseña)", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Recordarme</span>
      <% end %>

      <%= f.submit "Iniciar sesion", class: "btn btn-primary" %>
    <% end %>
    <p>Usuario nuevo? <%= link_to "Registrarse ahora!", signup_path %></p>
  </div>
</div>
